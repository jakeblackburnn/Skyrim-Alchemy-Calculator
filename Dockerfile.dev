# Development Dockerfile for Skyrim Alchemy Calculator
# Optimized for local development with hot-reload and debugging

FROM python:3.11-slim

# Set environment variables for development
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1

WORKDIR /app

# Copy requirements first for better layer caching
COPY requirements.txt .

# Install Python dependencies
# Note: NumPy/Pandas come with prebuilt wheels for Python 3.11
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
# Note: In dev, you might want to use volumes instead for hot-reload
COPY src/ ./src/
COPY data/ ./data/
COPY web_ui/ ./web_ui/
COPY run_webui.py .

# Expose port for development
EXPOSE 8000

# Run the application with Django development server
CMD ["python", "run_webui.py"]
